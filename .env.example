# ================================================
# PORTLY FRONTEND ENVIRONMENT CONFIGURATION
# ================================================
#
# Copy this file to .env.local for local development
#
# Backend Microservices:
# - Auth Service:     http://localhost:8081
# - Booking Service:  http://localhost:8082
# - Slot Service:     http://localhost:8083
# - AI Orchestrator:  http://localhost:8084
# - Audit Service:    http://localhost:8085

# API Configuration
# -----------------
# When using Vite proxy (recommended for development), leave empty or use /api
# When connecting directly to backend, use full URL
VITE_API_BASE_URL=

# Feature Flags
# -------------
# Set to "true" to use mock data instead of real backend
VITE_USE_MOCK_DATA=false

# Debug Mode
# ----------
VITE_DEBUG=false
